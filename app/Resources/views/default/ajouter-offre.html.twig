{% extends 'base.html.twig' %}

{% block body %}
   <div class="container">
       <h3>Ajouter une offre d'emploi</h3>
        <div class="row">
            <div class="well">
              {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                {# Les erreurs générales du formulaire. #}
                {{ form_errors(form) }}

                <div class="form-group">
                  {# Génération du label. #}
                  {{ form_label(form.intitule, "Intitulé de l'offre", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

                  {# Affichage des erreurs pour ce champ précis. #}
                  {{ form_errors(form.intitule) }}

                  <div class="col-sm-4">
                    {# Génération de l'input. #}
                    {{ form_widget(form.intitule, {'attr': {'class': 'form-control'}}) }}
                  </div>
                </div>

                {# Idem pour un autre champ. #}
                <div class="form-group">
                    {{ form_label(form.descriptif, "Descriptif de l'offre", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                  {{ form_errors(form.descriptif) }}
                  <div class="col-sm-4">
                    {{ form_widget(form.descriptif, {'attr': {'class': 'form-control'}}) }}
                  </div>
                </div>

                 <div class="form-group">
                  {# Génération du label. #}
                  {{ form_label(form.dateDebut, "Date début de l'offre", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

                  {# Affichage des erreurs pour ce champ précis. #}
                  {{ form_errors(form.dateDebut) }}

                  <div class="col-sm-2">
                    {# Génération de l'input. #}
                    {{ form_widget(form.dateDebut, {'attr': {'class': 'form-control'}}) }}
                  </div>
                </div>
                <div class="form-group">
                  {# Génération du label. #}
                  {{ form_label(form.duree, "Durée", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

                  {# Affichage des erreurs pour ce champ précis. #}
                  {{ form_errors(form.duree) }}

                  <div class="col-sm-1">
                    {# Génération de l'input. #}
                    {{ form_widget(form.duree, {'attr': {'class': 'form-control'}}) }}
                  </div>
                </div>

                <div class="form-group">
                  {# Génération du label. #}
                  {{ form_label(form.contrat, "Type de contrat", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

                  {# Affichage des erreurs pour ce champ précis. #}
                  {{ form_errors(form.contrat) }}

                  <div class="col-sm-2">
                    {# Génération de l'input. #}
                    {{ form_widget(form.contrat, {'attr': {'class': 'form-control'}}) }}
                  </div>
                </div>
              <div class="form-group">
                  <div class="col-sm-7" style="text-align: right;">
              {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
              {{ form_widget(form.Enregistrer, {'attr': {'class': 'btn btn-primary'}}) }}
                  </div>
              </div>

              {# Fermeture de la balise <form> du formulaire HTML #}
              {{ form_end(form) }}
            </div>
        </div>  
    </div> 
{% endblock %}
